<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.vodkasoft.canyousinkme.game.About" android:background="#ed2024">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BlackBarUp" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:src="@drawable/black_bar_up"
            android:layout_marginLeft="-12dp" android:layout_marginRight="-12dp"
            android:layout_marginTop="-50dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uss_battleship" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:src="@drawable/uss_battleship"
            android:layout_marginBottom="-50dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MainLogo" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:src="@drawable/main_logo"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vs_logo"
            android:src="@drawable/vs_logo_wl"
            android:layout_below="@+id/BlackBarUp" android:layout_alignEnd="@+id/MainLogo"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/names"
            android:src="@drawable/names" android:layout_above="@+id/uss_battleship"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
