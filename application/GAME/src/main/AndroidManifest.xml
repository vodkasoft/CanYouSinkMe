<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vodkasoft.canyousinkme.game" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED" />
    <uses-permission android:name="android.permission.SET_DEBUG_APP" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk android:minSdkVersion="18"
              android:targetSdkVersion="19"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.vodkasoft.canyousinkme.game.Main"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            android:configChanges="orientation|keyboardHidden"
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vodkasoft.canyousinkme.game.Login"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.vodkasoft.canyousinkme.game.About"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.vodkasoft.canyousinkme.game.CreateBoard"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_create_board"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.vodkasoft.canyousinkme.game.HostOrJoin"
            android:label="@string/title_activity_host_or_join"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.vodkasoft.canyousinkme.game.HostGame"
            android:label="@string/title_activity_host_game"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.vodkasoft.canyousinkme.game.JoinGame"
            android:label="@string/title_activity_join_game"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="com.vodkasoft.canyousinkme.game.Gaming"
            android:label="@string/title_activity_g" >
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.vodkasoft.canyousinkme.game.MenuFB"
            android:label="@string/title_activity_menu_fb" >
        </activity>
        <activity
            android:name="com.vodkasoft.canyousinkme.game.MenuGuest"
            android:label="@string/title_activity_menu_guest" >
        </activity>
        <activity
            android:name="com.vodkasoft.canyousinkme.game.Leaderboards"
            android:label="@string/title_activity_leaderboards" >
        </activity>
        <activity
            android:name="com.vodkasoft.canyousinkme.game.WelcomeFB"
            android:label="@string/title_activity_welcome_fb" >
        </activity>
        <activity
            android:name="com.vodkasoft.canyousinkme.game.MatchSummary"
            android:label="@string/title_activity_match_summary" >
        </activity>
    </application>

</manifest>
