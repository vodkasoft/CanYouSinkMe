<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.vodkasoft.canyousinkme.game.MatchSummary" android:background="#2e2e2e"
        >

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_main_logo"
            android:src="@drawable/main_logo" android:adjustViewBounds="false"
            android:layout_alignParentTop="true" android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="My score"
            android:id="@+id/textView" android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" android:textColor="#ffffff"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/matchsummary_score_txt" android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" android:layout_marginTop="42dp"
            android:textSize="50dp" android:textColor="#ffffff"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="CONDITION"
              android:id="@+id/matchsummary_condition_txt"
              android:textSize="70dp" android:textColor="#ffffff"
              android:layout_marginTop="42dp" android:layout_below="@+id/matchsummary_score_txt"
              android:layout_centerHorizontal="true" android:textIsSelectable="false"/>
</RelativeLayout>
