<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.vodkasoft.canyousinkme.game.About" android:background="#ed2024"
                android:padding="0dp">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uss_battleship" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:src="@drawable/uss_battleship"
            android:layout_marginBottom="-50dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MainLogo" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:src="@drawable/main_logo"
            android:layout_marginTop="40dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vs_logo"
            android:src="@drawable/vs_logo_wl"
            android:layout_below="@+id/MainLogo" android:layout_alignEnd="@+id/names"
            android:layout_marginTop="30dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/names"
            android:src="@drawable/names" android:layout_above="@+id/uss_battleship"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
