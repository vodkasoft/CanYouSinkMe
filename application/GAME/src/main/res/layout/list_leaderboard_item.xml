<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <com.facebook.widget.ProfilePictureView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/imageView1"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/textViewPlayerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:text="PlayerId"
        android:layout_toRightOf="@+id/imageView1"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Score: "
        android:id="@+id/textViewScore"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/textViewPlayerId"
        android:layout_alignStart="@+id/textViewPlayerId"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Rank:"
        android:id="@+id/textViewRank"
        android:layout_below="@+id/textViewScore"
        android:layout_alignStart="@+id/textViewScore"/>

</RelativeLayout>